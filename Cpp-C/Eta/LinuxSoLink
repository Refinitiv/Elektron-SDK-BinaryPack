#!/bin/ksh
echo "Shared Object Link Creation Start."


if [ -d "./Libs/RHEL6_64_GCC444" ]; then
    echo " "
    echo "Creating links for shared objects for Libs/RHEL6_64_GCC444"
    echo " "
    cd Libs/RHEL6_64_GCC444/Optimized/Shared;
    ln -s librssl-eta3.1.1.L1.so librssl.so.6
    ln -s librssl.so.6 librssl.so
    cd ../../../..
    cd Libs/RHEL6_64_GCC444/Optimized_Assert/Shared;
    ln -s librssl-eta3.1.1.L1.so librssl.so.6
    ln -s librssl.so.6 librssl.so
    cd ../../../..
    cd Libs/RHEL6_64_GCC444/Optimized/Shared;
    ln -s librsslVA-eta3.1.1.L1.so librsslVA.so.9 
    ln -s librsslVA.so.9  librsslVA.so
    ln -s librsslVACache-eta3.1.1.L1.so librsslVACache.so.2
    ln -s librsslVACache.so.2 librsslVACache.so
    cd ../../../..
    cd Libs/RHEL6_64_GCC444/Optimized_Assert/Shared;
    ln -s librsslVA-eta3.1.1.L1.so librsslVA.so.9 
    ln -s librsslVA.so.9  librsslVA.so
    ln -s librsslVACache-eta3.1.1.L1.so librsslVACache.so.2
    ln -s librsslVACache.so.2 librsslVACache.so
    cd ../../../..
fi


if [ -d "./Libs/OL7_64_GCC482" ]; then
    echo " "
    echo "Creating links for shared objects for Libs/OL7_64_GCC482"
    echo " "
    cd Libs/OL7_64_GCC482/Optimized/Shared;
    ln -s librssl-eta3.1.1.L1.so librssl.so.6
    ln -s librssl.so.6 librssl.so
    cd ../../../..
    cd Libs/OL7_64_GCC482/Optimized_Assert/Shared;
    ln -s librssl-eta3.1.1.L1.so librssl.so.6
    ln -s librssl.so.6 librssl.so
    cd ../../../..
    cd Libs/OL7_64_GCC482/Optimized/Shared;
    ln -s librsslVA-eta3.1.1.L1.so librsslVA.so.9 
    ln -s librsslVA.so.9  librsslVA.so
    ln -s librsslVACache-eta3.1.1.L1.so librsslVACache.so.2
    ln -s librsslVACache.so.2 librsslVACache.so
    cd ../../../..
    cd Libs/OL7_64_GCC482/Optimized_Assert/Shared;
    ln -s librsslVA-eta3.1.1.L1.so librsslVA.so.9 
    ln -s librsslVA.so.9  librsslVA.so
    ln -s librsslVACache-eta3.1.1.L1.so librsslVACache.so.2
    ln -s librsslVACache.so.2 librsslVACache.so
    cd ../../../..
fi


echo "Shared Object Link Creation Completed."
echo " "
